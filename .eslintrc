{
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "mocha": true
  },

  "globals": {
    "angular": true,
    "inject": true
  },

  "rules": {
    "camelcase": [2, {"properties": "always"}],

    "dot-notation": 1,
    // disallow trailing commas in object literals
    "no-comma-dangle": 0,
    // disallow use of debugger
    "no-debugger": 0,

    "indent": [2, 2],

    "quotes": [2, "single"],

    "linebreak-style": [2, "unix"],

    "semi": [2, "always"],

    "no-cond-assign": 0,

    "no-console": 1
  },

  "extends": "eslint:recommended"
}
